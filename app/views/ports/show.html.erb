<h1><%= @status.port.port_name %> | <%= @status.port.crossing_name %></h1>
Port Status: <%= @status.port_status %><br>
Data last updated: <%= @status.date %><br><br>

<% if @status.pass_max_lanes.to_i == 0 %>
    <% %>
<% else %>
  <fieldset>
    <legend>Passenger Vehicles | Max Lanes: <%= @status.pass_max_lanes %> | Updated: <%= @status.pass_standard_update_time%></legend>
    <div class="row">
      <div class="status-column">
        Standard Lanes<br> 
        Status: <%= @status.pass_standard_operational_status %><br>
        Delay: <%= @status.pass_standard_delay_minutes %> mins<br>
        Lanes Open: <%= @status.pass_standard_lanes_open %>
      </div>
      <div class="status-column">
        SENTRI Lanes<br> 
        Status: <%= @status.pass_sentri_operational_status %><br>
        Delay: <%= @status.pass_sentri_delay_minutes %> mins<br>
        Lanes Open: <%= @status.pass_sentri_lanes_open %>
      </div>
      <div class="status-column">
        Ready Lanes<br> 
        Status: <%= @status.pass_ready_operational_status %><br>
        Delay: <%= @status.pass_ready_delay_minutes %> mins<br>
        Lanes Open: <%= @status.pass_ready_lanes_open %>
      </div>
    </div>
  </fieldset><br>
<% end %>

<% if @status.ped_max_lanes.to_i == 0 %>
