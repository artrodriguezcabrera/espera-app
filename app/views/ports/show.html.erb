<% else %>
  <fieldset>
    <legend>Commercial Vehicles | Max Lanes: <%= @status.comm_max_lanes %> | Updated <%= @status.comm_standard_update_time%></legend>
    <div class="row">
      <div class="column">
        Standard Lanes<br> 
